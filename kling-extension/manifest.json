{
  "manifest_version": 3,
  "name": "Kling Complete Workflow",
  "version": "2.1.0",
  "description": "Complete audio workflow: Segment audio with AI transcription (works in background!), batch upload to Kling AI, and download generated videos",
  "permissions": ["storage", "unlimitedStorage", "downloads", "webRequest", "offscreen"],
  "host_permissions": [
    "http://localhost:5001/*",
    "https://app.klingai.com/*",
    "https://*.klingai.com/*",
    "https://api.replicate.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://app.klingai.com/global/ai-human/video/new*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

